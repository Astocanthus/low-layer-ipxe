storage:
  files:
    - path: /etc/rpm-ostreed.conf
      mode: 0644
      contents:
        inline: |
          [Daemon]
          AutomaticUpdatePolicy=none

systemd:
  units:
    - name: install-ovs.service
      enabled: true
      contents: |
        [Unit]
        Description=Install OpenVSwitch at first boot
        After=network-online.target
        Wants=network-online.target
        ConditionPathExists=!/var/lib/ovs-installed

        [Service]
        Type=oneshot
        ExecStart=/usr/bin/rpm-ostree install --apply-live --allow-inactive openvswitch
        ExecStartPost=/usr/bin/touch /var/lib/ovs-installed
        RemainAfterExit=yes

        [Install]
        WantedBy=multi-user.target
